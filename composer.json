{
    "name": "sci/assert",
    "description": "Extensible lightweight assertion library",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.7",
        "squizlabs/php_codesniffer": "^2.3",
        "humbug/humbug": "~1.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Sci\\Assert\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sci\\Tests\\Assert\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
